<html>
  <head>
    <title>Todos</title>
    <link href='/favicon.ico' rel='icon' type='image/x-icon' />
    <link href='/assets/stylesheets/application.css' rel='stylesheet' type='text/css' />
    <meta content='width=device-width, minimum-scale=0.6, maximum-scale=0.6' name='viewport' />
  </head>
  <body>
    <h1>Todo List</h1>
    <ul class="todo-list">
      <li class="todo-item"><div class="col">&nbsp;</div><div class="col"></div></li>
      <li class="todo-item completed"><div class="col"><div class="checkbox"></div></div><div class="col">Some neat todo item</div></li>
      <li class="todo-item completed"><div class="col"><div class="checkbox"></div></div><div class="col">Some neat todo item</div></li>
